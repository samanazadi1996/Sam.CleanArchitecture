{
  "UseInMemoryDatabase": false,
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.;Initial Catalog=CleanArchitectureAuditLog;Integrated Security=True;MultipleActiveResultSets=True;TrustServerCertificate=True",
    "IdentityConnection": "Data Source=.;Initial Catalog=CleanArchitectureAuditLogIdentity;Integrated Security=True;MultipleActiveResultSets=True;TrustServerCertificate=True",
    "FileManagerConnection": "Data Source=.;Initial Catalog=CleanArchitectureAuditLogFileManager;Integrated Security=True;MultipleActiveResultSets=True;TrustServerCertificate=True",
    "MongoAuditLogConnection": "mongodb://root:password@localhost:27017/;CleanArchitectureAuditLog;AuditLogCollection",
    "EventStoreAuditLogConnection": "esdb://localhost:2113?tls=false;AuditLog-stream"
  },
  "IdentitySettings": {
    "PasswordRequireDigit": true,
    "PasswordRequiredLength": 5,
    "PasswordRequireNonAlphanumeric": true,
    "PasswordRequireUppercase": true,
    "PasswordRequireLowercase": true
  },
  "JwtSettings": {
    "Key": "C1CF4B7DC4C4175B6618DE4F55CA4AAA",
    "Issuer": "CoreIdentity",
    "Audience": "CoreIdentityUser",
    "DurationInMinutes": 15
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Using": [ "Serilog.Enrichers.ClientInfo", "Serilog.Exceptions" ],
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithExceptionDetails"
    ],
    "Properties": {
      "ApplicationName": "CleanArchitecture.WebApi"
    }
  },
  "Localization": {
    "DefaultRequestCulture": "en",
    "SupportedCultures": [ "en", "fa" ]
  }
}
